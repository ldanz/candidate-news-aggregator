= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :zipcode
    = f.number_field :zipcode
  .field
    = f.label :economy
    = f.check_box :economy
  .field
    = f.label :healthcare
    = f.check_box :healthcare
  .field
    = f.label :social_security
    = f.check_box :social_security
  .actions
    = f.submit 'Save'
